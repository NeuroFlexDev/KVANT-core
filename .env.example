MAIL_SUPPORT=support@example.com

# AWS S3 настройки (из оригинального settings.py)
AWS_KEY_ID=CHANGE_THIS_AWS_KEY
AWS_SECRET=CHANGE_THIS_AWS_SECRET
AWS_BUCKET=CHANGE_THIS_AWS_BUCKET

# Внешние сервисы
SERVER_NAME=https://your-domain.example.com
SERVER_DCAPI=https://dcapi.example.com
