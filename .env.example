# Общие настройки
APP_ENV=dev
BUILD_TARGET=development
NODE_ENV=development

# Порты
FRONTEND_PORT=5173
BACKEND_PORT=8000
DB_PORT=5432
REDIS_PORT=6379
NGINX_PORT=80
NGINX_SSL_PORT=443

# База данных
DB_HOST=postgres
DB_NAME=kvant_dev
DB_USER=kvant_user
DB_PASSWORD=kvant_password

# Безопасность
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true

# Sentry (для мониторинга ошибок)
SENTRY_DSN=
SENTRY_ENV=development

# Email настройки (из оригинального settings.py)
MAIL_HOST=smtp.yandex.ru
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_HOST_USER=you@example.com
MAIL_HOST_PASSWORD=CHANGE_THIS_PASSWORD
