# Настройки для продакшена
APP_ENV=prod
BUILD_TARGET=production
NODE_ENV=production

# Порты для продакшена (внутри контейнеров)
NGINX_PORT=80
NGINX_SSL_PORT=443

# База данных для продакшена
DB_HOST=postgres
DB_NAME=kvant_prod
DB_USER=kvant_admin
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Безопасность для продакшена
SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_KEY
DEBUG=false

# Sentry для мониторинга в продакшене
SENTRY_DSN=ADD_YOUR_SENTRY_DSN_HERE
SENTRY_ENV=production

# Email для продакшена
MAIL_HOST=smtp.yandex.ru
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_HOST_USER=CHANGE_TO_YOUR_EMAIL
MAIL_HOST_PASSWORD=CHANGE_TO_YOUR_EMAIL_PASSWORD
MAIL_FROM=CHANGE_TO_YOUR_EMAIL
MAIL_SUPPORT=CHANGE_TO_YOUR_SUPPORT_EMAIL

# AWS S3 для продакшена
AWS_KEY_ID=CHANGE_TO_YOUR_AWS_KEY
AWS_SECRET=CHANGE_TO_YOUR_AWS_SECRET
AWS_BUCKET=CHANGE_TO_YOUR_BUCKET